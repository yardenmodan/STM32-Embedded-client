{
    "tasks": [
        {
            "type": "shell",

            //task label (used in launch.json -> configrations -> preLaunchTask):
            "label": "preLaunchTask",

            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                
                //recommended warning flags for compilation:
                "-Wall",
                "-Wextra",
                "-pedantic",
                "-std=c99",
                // include header files
                "-I./Client/getUserInput/Inc",
                "-I./Client/program/Inc",
                "-I./Client/sendTestUDP/Inc",
                "-I./Client/translateStringsToPacket/Inc",
                //"-I/C://Users/yarde/Downloads/MinGW/x86_64-w64-mingw32/include",

                //source file - use all top level .cpp files:
                "./Client/getUserInput/Src/*.c",
                "./Client/program/Src/*.c",
                "./Client/sendTestUDP/Src/*.c",
                "./Client/translateStringsToPacket/Src/*.c",

                //outputfile - always "program" at workspace directory:
                "-o",
                "program",
            ],
            "options": {
                //working directory for compilation:
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
